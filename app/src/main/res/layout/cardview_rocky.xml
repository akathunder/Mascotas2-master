<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView

    android:id="@+id/cvMascota_Rocky"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    card_view:cardCornerRadius="@dimen/corner_radius_cardview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin"
        >

        <ImageView
            android:id="@+id/imgfotoRocky"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/rocky_png"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvhuesosRocky"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/numeroestrellas"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"

                />

            <ImageButton
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:id="@+id/btnHuesoColor_Rocky"
                android:background="@drawable/dog_bone_48_color"
                android:layout_marginRight="10dp"
                />

        </LinearLayout>

    </LinearLayout>




</android.support.v7.widget.CardView>